{
  "name": "music-play-backend-developmente",
  "version": "0.0.1",
  "description": "Music Play backend for development environment",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:services": "docker-compose up --no-start && cd ..",
    "start:services": "docker-compose start && docker exec music-play-rabbitmq-3.11 sh -c 'rabbitmq-plugins enable rabbitmq_management' && cd ..",
    "start:service:mongodb": "docker start music-play-mongo-3.6.18 && cd ..",
    "start:service:redis": "docker start music-play-redis-5.0.5 && cd ..",
    "start:service:rabbitmq": "docker start music-play-rabbitmq-3.11 && docker exec music-play-rabbitmq-3.11 sh -c 'rabbitmq-plugins enable rabbitmq_management' && cd ..",
    "stop:services": "docker-compose stop && cd ..",
    "stop:service:mongodb": "docker stop music-play-mongo-3.6.18 && cd ..",
    "stop:service:redis": "docker stop music-play-redis-5.0.5 && cd ..",
    "stop:service:rabbitmq": "docker stop music-play-rabbitmq-3.11 && cd ..",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/music-play-backend-developmente/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^11.0.0",
    "dotenv": "^17.2.3",
    "install": "^0.13.0",
    "mongodb": "^6.0.0",
    "npm": "^11.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.19.28",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
